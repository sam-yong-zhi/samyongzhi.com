---
import BaseLayout from './BaseLayout.astro';
import CategoryBadge from '../components/CategoryBadge.astro';
import SubscribeForm from '../components/SubscribeForm.astro';
import type { CollectionEntry } from 'astro:content';

interface LangToggle {
  en: string;
  id: string | null;
  active: 'en' | 'id';
}

interface Props {
  post: CollectionEntry<'blog'>;
  langToggle?: LangToggle;
}

const { post, langToggle } = Astro.props;
const { title, date, categories, description } = post.data;

const lang = post.id.endsWith('.id.md') ? 'id' : 'en';

const formattedDate = date.toLocaleDateString(lang === 'id' ? 'id-ID' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description} lang={lang} langToggle={langToggle}>
  <article>
    <header class="post-header">
      {categories.map((cat) => <CategoryBadge category={cat} />)}
      <h1>{title}</h1>
      <time class="post-date" datetime={date.toISOString()}>{formattedDate}</time>
    </header>
    <div class="prose">
      <slot />
    </div>
  </article>
  <SubscribeForm lang={lang} />
</BaseLayout>
