---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft && data.categories.includes('ai-and-work'));
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="AI & Work" description="Not hype, not panic â€” an honest look at what AI is changing about work and careers.">
  <div class="page-title">
    <h1>AI & Work</h1>
    <p>Not hype, not panic. What's actually changing, and what it means for careers.</p>
  </div>

  <ul class="filter-bar">
    <li><a href="/blog">All</a></li>
    <li><a href="/parenting">Parenting</a></li>
    <li><a href="/money">Money</a></li>
    <li><a href="/ai-and-work" class="active">AI & Work</a></li>
  </ul>

  <div class="post-list">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>
