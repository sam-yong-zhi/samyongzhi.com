---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', (post) => !post.data.draft && post.id.endsWith('.en.md') && post.data.categories.includes('parenting'));
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Parenting" description="Writing about raising kids in an uncertain world." langToggle={{ en: '', id: '/id/parenting', active: 'en' }}>
  <div class="page-title">
    <h1>Parenting</h1>
    <p>The honest stuff about raising kids in a world that's changing fast.</p>
  </div>

  <ul class="filter-bar">
    <li><a href="/blog">All</a></li>
    <li><a href="/parenting" class="active">Parenting</a></li>
    <li><a href="/money">Money</a></li>
    <li><a href="/ai-and-work">AI & Work</a></li>
  </ul>

  <div class="post-list">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>
