---
import { getCollection, render } from 'astro:content';
import PostLayout from '../../../layouts/PostLayout.astro';

export async function getStaticPaths() {
  function idToSlug(id: string) { return id.replace(/\.(en|id)\.md$/, ''); }
  const posts = await getCollection('blog', (post) =>
    !post.data.draft && post.id.endsWith('.id.md')
  );
  return posts.map((post) => {
    const slug = idToSlug(post.id);
    return {
      params: { slug },
      props: {
        post,
        langToggle: {
          en: `/blog/${slug}`,
          id: '',
          active: 'id' as const,
        },
      },
    };
  });
}

const { post, langToggle } = Astro.props;
const { Content } = await render(post);
---

<PostLayout post={post} langToggle={langToggle}>
  <Content />
</PostLayout>
