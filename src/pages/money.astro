---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft && data.categories.includes('money'));
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Money" description="Practical thinking about building financial security for a family.">
  <div class="page-title">
    <h1>Money</h1>
    <p>Practical thinking about building financial security for a family.</p>
  </div>

  <ul class="filter-bar">
    <li><a href="/blog">All</a></li>
    <li><a href="/parenting">Parenting</a></li>
    <li><a href="/money" class="active">Money</a></li>
    <li><a href="/ai-and-work">AI & Work</a></li>
  </ul>

  <div class="post-list">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>
