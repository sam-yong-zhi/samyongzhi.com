---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', (post) => !post.data.draft && post.id.endsWith('.en.md'));
const posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog" description="All writing by Sam Yong Zhi on parenting, money, and AI." langToggle={{ en: '', id: '/id/blog', active: 'en' }}>
  <div class="page-title">
    <h1>All Posts</h1>
  </div>

  <ul class="filter-bar">
    <li><a href="/blog" class="active">All</a></li>
    <li><a href="/parenting">Parenting</a></li>
    <li><a href="/money">Money</a></li>
    <li><a href="/ai-and-work">AI & Work</a></li>
  </ul>

  <div class="post-list">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>
