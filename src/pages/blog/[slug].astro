---
import { getCollection, render } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';

export async function getStaticPaths() {
  function idToSlug(id: string) { return id.replace(/\.(en|id)\.md$/, ''); }
  const enPosts = await getCollection('blog', (post) =>
    !post.data.draft && post.id.endsWith('.en.md')
  );
  const idPosts = await getCollection('blog', (post) =>
    !post.data.draft && post.id.endsWith('.id.md')
  );
  const idSlugs = new Set(idPosts.map((p) => idToSlug(p.id)));
  return enPosts.map((post) => {
    const slug = idToSlug(post.id);
    return {
      params: { slug },
      props: {
        post,
        langToggle: {
          en: '',
          id: idSlugs.has(slug) ? `/id/blog/${slug}` : null,
          active: 'en' as const,
        },
      },
    };
  });
}

const { post, langToggle } = Astro.props;
const { Content } = await render(post);
---

<PostLayout post={post} langToggle={langToggle}>
  <Content />
</PostLayout>
