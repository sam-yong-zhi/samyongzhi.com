---
import CategoryBadge from './CategoryBadge.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  lang?: 'en' | 'id';
}

function idToSlug(id: string) { return id.replace(/\.(en|id)\.md$/, ''); }

const { post, lang = 'en' } = Astro.props;
const { title, date, categories, description } = post.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const href = lang === 'id'
  ? `/id/blog/${idToSlug(post.id)}`
  : `/blog/${idToSlug(post.id)}`;
---

<article class="post-card">
  <a href={href} class="post-card__title">{title}</a>
  <div class="post-card__meta">
    <time datetime={date.toISOString()}>{formattedDate}</time>
    {categories.map((cat) => <CategoryBadge category={cat} />)}
  </div>
  <p class="post-card__desc">{description}</p>
</article>
