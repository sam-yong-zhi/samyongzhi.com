---
interface Props {
  lang?: 'en' | 'id';
}
const { lang = 'en' } = Astro.props;

const formUrl = lang === 'id'
  ? 'https://app.kit.com/forms/62ff4b45f3/subscriptions'
  : 'https://app.kit.com/forms/9126547/subscriptions';

const promptText = lang === 'id'
  ? 'Suka tulisan ini? Dapatkan postingan baru lewat email.'
  : 'Enjoyed this? Get new posts by email.';

const btnText = lang === 'id' ? 'Langganan' : 'Subscribe';
const subscribingText = lang === 'id' ? 'Mendaftar\u2026' : 'Subscribing\u2026';
const subscribedText = lang === 'id' ? 'Terdaftar' : 'Subscribed';
const placeholder = lang === 'id' ? 'kamu@contoh.com' : 'you@example.com';

const successText = lang === 'id'
  ? 'Kamu sudah terdaftar. Cek inbox-mu untuk email konfirmasi. Kalau masuk spam, tandai bukan spam dan kamu siap.'
  : "You're in. Check your inbox for a confirmation email. If it lands in spam, mark it as not spam and you'll be all set.";

const errorText = lang === 'id'
  ? 'Ada yang salah. Coba lagi.'
  : 'Something went wrong. Try again.';
---

<div
  class="subscribe-form"
  data-form-url={formUrl}
  data-subscribing={subscribingText}
  data-subscribed={subscribedText}
>
  <p class="subscribe-prompt">{promptText}</p>
  <form class="subscribe-fields">
    <input
      type="email"
      name="email_address"
      placeholder={placeholder}
      required
      autocomplete="email"
    />
    <button type="submit">{btnText}</button>
  </form>
  <p class="subscribe-msg subscribe-msg--success" hidden>{successText}</p>
  <p class="subscribe-msg subscribe-msg--error" hidden>{errorText}</p>
</div>

<style>
  .subscribe-form {
    margin-top: 3rem;
    border-top: 1px solid var(--border);
    padding-top: 2rem;
    font-family: var(--font-sans);
  }

  .subscribe-prompt {
    margin: 0 0 0.875rem;
    color: var(--muted);
    font-size: 0.925rem;
  }

  .subscribe-fields {
    display: flex;
    gap: 0.5rem;
  }

  .subscribe-fields input[type="email"] {
    flex: 1;
    padding: 0.5rem 0.75rem;
    font-size: 0.925rem;
    font-family: var(--font-sans);
    color: var(--text);
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    outline: none;
    transition: border-color 0.15s;
  }

  .subscribe-fields input[type="email"]:focus {
    border-color: var(--muted);
  }

  .subscribe-fields button {
    padding: 0.5rem 1rem;
    font-size: 0.925rem;
    font-family: var(--font-sans);
    color: var(--text);
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    cursor: pointer;
    white-space: nowrap;
    transition: border-color 0.15s, color 0.15s;
  }

  .subscribe-fields button:hover {
    border-color: var(--muted);
  }

  .subscribe-fields button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .subscribe-msg {
    margin: 0.75rem 0 0;
    font-size: 0.925rem;
  }

  .subscribe-msg--success {
    color: var(--muted);
  }

  .subscribe-msg--error {
    color: #c0392b;
  }

  [data-theme="dark"] .subscribe-msg--error {
    color: #e07070;
  }

  @media (max-width: 640px) {
    .subscribe-fields {
      flex-direction: column;
    }

    .subscribe-fields button {
      width: 100%;
    }
  }
</style>

<script>
  const wrapper = document.querySelector('.subscribe-form') as HTMLElement;
  const form = wrapper?.querySelector('.subscribe-fields') as HTMLFormElement;
  const btn = form?.querySelector('button') as HTMLButtonElement;
  const successMsg = wrapper?.querySelector('.subscribe-msg--success') as HTMLElement;
  const errorMsg = wrapper?.querySelector('.subscribe-msg--error') as HTMLElement;

  const formUrl = wrapper?.dataset.formUrl ?? 'https://app.kit.com/forms/9126547/subscriptions';
  const subscribingText = wrapper?.dataset.subscribing ?? 'Subscribing\u2026';
  const subscribedText = wrapper?.dataset.subscribed ?? 'Subscribed';

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (form.querySelector('input[name="email_address"]') as HTMLInputElement).value;
    const originalBtnText = btn.textContent;

    btn.disabled = true;
    btn.textContent = subscribingText;
    errorMsg.hidden = true;

    try {
      const res = await fetch(formUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({ email_address: email }).toString(),
      });

      if (res.ok) {
        btn.textContent = subscribedText;
        successMsg.hidden = false;
      } else {
        throw new Error('non-2xx');
      }
    } catch {
      errorMsg.hidden = false;
      btn.disabled = false;
      btn.textContent = originalBtnText;
    }
  });
</script>
